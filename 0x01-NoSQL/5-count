import pymongo
import sys

# Get the database name from the command line argument
db_name = sys.argv[1]

# Set up a MongoClient instance
client = pymongo.MongoClient()

# Get the specified database
db = client[db_name]

# Get the school collection in the database
school = db['school']

# Count the number of documents in the collection
num_docs = school.count_documents({})

# Print out the result
print(f'The collection school contains {num_docs} documents.')

